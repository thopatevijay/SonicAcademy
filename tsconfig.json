{
  "compilerOptions": {
    "target": "es2016",                         
    "module": "commonjs",                       
    "rootDir": "./src",                         
    "outDir": "./dist",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "sourceMap": true,                          
    "resolveJsonModule": true                   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
